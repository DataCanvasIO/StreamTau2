<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zetyun.streamtau.manager.db.mapper.JobMapper">

    <select id="findById" parameterType="long" resultType="Job">
        select * from job
        <where>
            job_id = #{jobId}
        </where>
    </select>

    <select id="findByStatus" parameterType="JobStatus" resultType="Job">
        select * from job
        <where>
            job_status = #{jobStatus}
        </where>
    </select>

    <insert id="insert" parameterType="Job" useGeneratedKeys="true" keyProperty="jobId">
        insert into job(
        <trim suffixOverrides=",">
            job_name,
            project_id,
            app_id,
            app_type,
            version,
            job_definition,
            job_status
        </trim>
        ) values (
        <trim suffixOverrides=",">
            #{model.jobName},
            #{model.projectId},
            #{model.appId},
            #{model.appType},
            #{model.version},
            #{model.jobDefinition},
            #{model.jobStatus}
        </trim>
        )
    </insert>

    <update id="updateStatus" parameterType="Job">
        update job
        <set>
            job_status = #{jobStatus}
        </set>
        <where>
            job_id = #{jobId}
        </where>
    </update>

</mapper>
