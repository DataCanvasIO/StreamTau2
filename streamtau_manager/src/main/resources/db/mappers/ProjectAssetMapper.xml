<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zetyun.streamtau.manager.db.mapper.ProjectAssetMapper">

    <select id="findAll" resultType="ProjectAsset">
        select * from project_asset
    </select>

    <insert id="addToProject" parameterType="ProjectAsset">
        <selectKey keyProperty="model.projectAssetId" resultType="String" order="BEFORE">
            select uuid()
        </selectKey>
        insert into project_asset(project_id, asset_id, project_asset_id)
        values (#{model.projectId}, #{model.assetId}, #{model.projectAssetId});
    </insert>

    <delete id="deleteFromProject" parameterType="ProjectAsset">
        delete from project_asset
        <where>
            project_id = #{model.projectId}
            and project_asset_id = #{model.projectAssetId}
        </where>
    </delete>

</mapper>
